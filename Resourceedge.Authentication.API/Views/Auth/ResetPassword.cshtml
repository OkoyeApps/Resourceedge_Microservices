
@{
    var modelGet = (LoginGetViewModel)ViewData["modelDetails"];
    Layout = "~/Views/Auth/Shared/_AuthLayout.cshtml";
}


<div class="login-box">

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert">&times; </button>
            <span>@ViewBag.Error.ToString()</span>
        </div>

    }

    <div class="name-box">
        <span class="welcome-text">Reset Password!</span>
    </div>
    <form asp-controller="Auth" asp-action="ResetPassword" method="post">
        <input type="text" readonly="readonly" name="Username" value="@Model.UserName" />
        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
        <div class="form-control enter-mail">
            <div class="row h-100">
                <div class="col-2"></div>
                <div class="col-8 h-100">
                    <input class="w-100 h-100 text-center" name="password" placeholder="Password" type="password" id="password" />
                </div>
                <div class="col-2 d-flex align-items-center justify-content-center">

                    <img src='~/images/closedEye.svg' alt="good icon" onMouseDown={showPassword}
                         class="password-icon" style="display: none;" id="password-hider"
                         onclick="showPassword(false)" />

                    <img src="~/images/openEye.svg" alt="good icon" class="password-icon"
                         onclick="showPassword(true)" id='password-shower' />

                </div>
            </div>
        </div>
        <div class="form-control enter-mail">
            <div class="row h-100">
                <div class="col-2"></div>
                <div class="col-8 h-100">
                    <input class="w-100 h-100 text-center" name="Confirmpassword" placeholder="Confirm Password" type="password" id="password1" />
                </div>
                <div class="col-2 d-flex align-items-center justify-content-center">

                    <img src='~/images/closedEye.svg' alt="good icon" onMouseDown={showPassword}
                         class="password-icon" style="display: none;" id="password-hider1"
                         onclick="showPassword(false)" />

                    <img src="~/images/openEye.svg" alt="good icon" class="password-icon"
                         onclick="showPassword(true)" id='password-shower1' />

                </div>
            </div>
        </div>

        <button class="btn proceed" type="submit">Proceed</button>

    </form>

</div>
<script>
    let password = document.getElementById('password');
    let passwordShower = document.getElementById('password-shower')
    let passwordHider = document.getElementById('password-hider')

    const showPassword = (decision) => {
        if (decision === true) {
            password.type = "text"
            passwordShower.style = 'display: none;'
            passwordHider.style = 'display: unset'
        }
        else {
            password.type = "password"
            passwordShower.style = 'display: unset'
            passwordHider.style = 'display: none'
        }
    }
